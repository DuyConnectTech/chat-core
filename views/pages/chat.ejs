<!DOCTYPE html>
<html lang="vi">

<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    <%# Hidden user data for JS client %>
    <div id="user-info" data-id="<%= user.id %>" data-name="<%= user.display_name %>" class="d-none"></div>

    <div class="chat-container">
        <header class="chat-header">
            <h4 class="mb-0 text-primary"><i class="fab fa-facebook-messenger me-2"></i>Chat Core</h4>
            <div class="d-flex align-items-center">
                <span class="me-3">Chào, <strong><%= user.display_name %></strong></span>
                <a href="/logout" class="btn btn-sm btn-outline-danger">Đăng xuất</a>
            </div>
        </header>

        <main class="chat-main">
            <%- include('../partials/chat/sidebar', { conversations, featureFlags }) %>
            <%- include('../partials/chat/chat-window', { featureFlags }) %>
        </main>
    </div>

    <%- include('../partials/chat/modals', { otherUsers, featureFlags }) %>

    <script>
        window.__FEATURES__ = <%- JSON.stringify(featureFlags) %>;
    </script>
    <%- include('../partials/scripts') %>
</body>

</html>