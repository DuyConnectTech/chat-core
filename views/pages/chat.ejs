<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Giấu dữ liệu user vào thẻ ẩn để JS Client lấy ra -->
    <div id="user-info" data-id="<%= user.id %>" data-name="<%= user.display_name %>" style="display:none;"></div>

    <div class="chat-container">
        <header class="chat-header">
            <h4 class="mb-0 text-primary"><i class="fab fa-facebook-messenger me-2"></i>Chat Core</h4>
            <div class="d-flex align-items-center">
                <span class="me-3">Chào, <strong>
                        <%= user.display_name %>
                    </strong></span>
                <a href="/logout" class="btn btn-sm btn-outline-danger">Đăng xuất</a>
            </div>
        </header>

        <main class="chat-main">
            <!-- Sidebar -->
            <aside class="chat-sidebar">
                <div class="p-3">
                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#newChatModal">
                                <i class="fas fa-user-plus me-2"></i>Chat 1-1
                            </button>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#newGroupModal">
                                <i class="fas fa-users me-2"></i>Tạo nhóm
                            </button>
                        </div>
                    </div>
                    <input type="text" class="form-control" placeholder="Tìm kiếm cuộc trò chuyện...">
                </div>
                <div class="flex-grow-1 overflow-auto" id="conversation-list">
                    <% conversations.forEach(conv=> { %>
                        <div class="conv-item d-flex align-items-center p-3" data-id="<%= conv.id %>" data-type="<%= conv.type %>" data-owner="<%= conv.owner_id %>"
                            data-bot="<%= conv.is_bot_active %>">
                            <div class="position-relative me-3">
                                <div class="user-badge">
                                    <%= conv.type==='private' ? (conv.Users[0]?.display_name[0] || 'U' ) : 'G' %>
                                </div>
                            </div>
                            <div class="flex-grow-1 overflow-hidden">
                                <div class="d-flex justify-content-between">
                                    <h6 class="mb-0 text-truncate">
                                        <%= conv.type==='private' ? (conv.Users[0]?.display_name || 'Người dùng' ) : (conv.title || 'Nhóm chat' ) %>
                                    </h6>
                                    <small class="text-muted">
                                        <%= conv.lastMessage ? new Date(conv.lastMessage.created_at).toLocaleTimeString([], {hour: '2-digit' , minute:'2-digit'}) : '' %>
                                    </small>
                                </div>
                                <div class="text-truncate small text-muted">
                                    <%= conv.lastMessage ? `${conv.lastMessage.sender.display_name}: ${conv.lastMessage.content}` : 'Bắt đầu trò chuyện...' %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </aside>

            <!-- Chat Window -->
            <section class="chat-content">
                <div id="no-chat-selected" class="h-100 d-flex flex-column justify-content-center align-items-center text-muted">
                    <i class="fab fa-facebook-messenger fa-4x mb-3 opacity-25"></i>
                    <h5>Chọn một cuộc trò chuyện để bắt đầu</h5>
                </div>

                <div id="chat-window" class="d-none h-100 flex-column">
                    <!-- New Header Design -->
                    <div class="chat-content-header shadow-sm">
                        <div class="d-flex align-items-center">
                            <div class="user-badge me-3 shadow-sm" id="active-chat-avatar"></div>
                            <div>
                                <h6 class="mb-0 fw-bold" id="active-chat-title"></h6>
                                <small class="text-muted" style="font-size: 0.75rem;">Đang hoạt động</small>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-light rounded-circle" data-bs-toggle="dropdown" style="width: 40px; height: 40px;">
                                <i class="fas fa-ellipsis-v text-muted"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                                <li><button class="dropdown-item text-danger py-2" id="leave-group-btn" style="display:none;"><i class="fas fa-sign-out-alt me-2 w-20"></i>Rời
                                        nhóm</button></li>
                                <li><button class="dropdown-item text-danger py-2" id="delete-group-btn" style="display:none;"><i class="fas fa-trash-alt me-2 w-20"></i>Giải tán
                                        nhóm</button></li>
                                <li><button class="dropdown-item py-2" id="bot-toggle-btn" style="display:none;"><i class="fas fa-robot me-2 w-20"></i>Cài đặt AI</button></li>
                            </ul>
                        </div>
                    </div>

                    <div class="messages-list" id="messages-list">
                        <!-- Messages will be loaded here via JS -->
                    </div>

                    <div class="message-input">
                        <div id="recording-status" class="text-danger small mb-2 d-none ps-2">
                            <i class="fas fa-circle fa-pulse me-2"></i> Đang ghi âm... <span id="recording-time" class="fw-bold">00:00</span>
                        </div>
                        <form id="chat-form">
                            <button type="button" id="upload-btn" title="Gửi ảnh">
                                <i class="fas fa-image"></i>
                            </button>
                            <button type="button" id="record-btn" title="Ghi âm">
                                <i class="fas fa-microphone"></i>
                            </button>
                            <button type="button" id="ai-suggest-btn" title="AI Gợi ý">
                                <i class="fas fa-magic"></i>
                            </button>
                            <input type="file" id="file-input" class="d-none" accept="image/*">
                            <input type="text" id="msg-input" class="flex-grow-1 mx-2" placeholder="Nhập tin nhắn..." autocomplete="off">
                            <button type="submit" class="text-primary" title="Gửi">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <!-- Modal Chat mới -->
    <div class="modal fade" id="newChatModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bắt đầu chat mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0">
                    <div class="list-group list-group-flush">
                        <% otherUsers.forEach(u=> { %>
                            <button class="list-group-item list-group-item-action d-flex align-items-center p-3 start-chat-btn" data-user-id="<%= u.id %>">
                                <div class="user-badge me-3">
                                    <%= u.display_name[0] %>
                                </div>
                                <div>
                                    <%= u.display_name %>
                                </div>
                            </button>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Tạo nhóm mới -->
    <div class="modal fade" id="newGroupModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="create-group-form">
                    <div class="modal-header">
                        <h5 class="modal-title">Tạo nhóm chat mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên nhóm</label>
                            <input type="text" id="group-title" class="form-control" required placeholder="Nhập tên nhóm...">
                        </div>
                        <h6>Chọn thành viên</h6>
                        <div class="list-group list-group-flush overflow-auto" style="max-height: 300px;">
                            <% otherUsers.forEach(u=> { %>
                                <label class="list-group-item d-flex align-items-center p-3 cursor-pointer">
                                    <input class="form-check-input me-3 member-checkbox" type="checkbox" value="<%= u.id %>">
                                    <div class="user-badge me-3">
                                        <%= u.display_name[0] %>
                                    </div>
                                    <div>
                                        <%= u.display_name %>
                                    </div>
                                </label>
                                <% }) %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-success">Tạo nhóm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>