<%# Chat Sidebar — Conversation List %>
<aside class="chat-sidebar">
    <div class="p-3">
        <div class="row g-2 mb-3">
            <% if (featureFlags.feature_private_chat) { %>
            <div class="<%= featureFlags.feature_group_chat ? 'col-6' : 'col-12' %>">
                <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#newChatModal">
                    <i class="fas fa-user-plus me-2"></i>Chat 1-1
                </button>
            </div>
            <% } %>
            <% if (featureFlags.feature_group_chat) { %>
            <div class="<%= featureFlags.feature_private_chat ? 'col-6' : 'col-12' %>">
                <button class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#newGroupModal">
                    <i class="fas fa-users me-2"></i>Tạo nhóm
                </button>
            </div>
            <% } %>
        </div>
        <input type="text" class="form-control" placeholder="Tìm kiếm cuộc trò chuyện...">
    </div>
    <div class="flex-grow-1 overflow-auto" id="conversation-list">
        <% conversations.forEach(conv=> { %>
                <div class="conv-item d-flex align-items-center p-3" data-id="<%= conv.id %>" data-type="<%= conv.type %>" data-owner="<%= conv.owner_id %>"
                    data-bot="<%= conv.is_bot_active %>">
                    <div class="position-relative me-3">
                        <div class="user-badge">
                            <%= conv.type==='private' ? (conv.Users[0]?.display_name[0] || 'U' ) : 'G' %>
                        </div>
                    </div>
                    <div class="flex-grow-1 overflow-hidden">
                        <div class="d-flex justify-content-between">
                            <% const unreadCount = conv.dataValues.unread_count || 0; %>
                            <h6 class="mb-0 text-truncate <%= unreadCount > 0 ? 'fw-bold text-dark' : '' %>">
                                <%= conv.type==='private' ? (conv.Users[0]?.display_name || 'Người dùng' ) : (conv.title || 'Nhóm chat' ) %>
                            </h6>
                            <small class="text-muted">
                                <% 
                                    let timeDisplay = '';
                                    const msgDate = conv.lastMessage && (conv.lastMessage.createdAt || conv.lastMessage.created_at);
                                    if (msgDate) {
                                        try {
                                            timeDisplay = new Date(msgDate).toLocaleTimeString([], {hour: '2-digit' , minute:'2-digit'});
                                            if (timeDisplay === 'Invalid Date') timeDisplay = '';
                                        } catch (e) {}
                                    }
                                %>
                                <%= timeDisplay %>
                            </small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-truncate small <%= unreadCount > 0 ? 'fw-bold text-dark' : 'text-muted' %>" style="max-width: 85%;">
                                <% 
                                    let preview = 'Bắt đầu trò chuyện...';
                                    if (conv.lastMessage) {
                                        const sender = conv.lastMessage.sender ? conv.lastMessage.sender.display_name : 'User';
                                        let content = conv.lastMessage.content;
                                        const type = conv.lastMessage.type;
                                        
                                        if (type === 'image') content = '[Hình ảnh]';
                                        else if (type === 'audio') content = '[Ghi âm]';
                                        else if (type === 'system') content = '[Thông báo]';
                                        else if (type === 'ai') content = '[AI Bot] ' + content;
                                        
                                        // Strip HTML
                                        preview = `${sender}: ${content}`.replace(/<[^>]*>?/gm, ''); 
                                    }
                                %>
                                <%= preview %>
                            </div>
                            <% if (unreadCount > 0) { %>
                                <span class="badge bg-danger rounded-pill" id="unread-<%= conv.id %>"><%= unreadCount %></span>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
    </div>
</aside>
