{
  "name": "chat-core",
  "version": "1.0.0",
  "description": "A core chat application for interns using Node.js, Sequelize, and Socket.io",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:sass": "sass --watch src/scss:public/css",
    "dev:js": "esbuild src/js/main.js --bundle --watch --sourcemap --outdir=public/js",
    "dev:server": "nodemon server.js",
    "build": "npm-run-all build:*",
    "build:sass": "sass src/scss:public/css --style=compressed --no-source-map",
    "build:js": "esbuild src/js/main.js --bundle --minify --outdir=public/js",
    "start": "node server.js"
  },
  "keywords": [
    "chat",
    "nodejs",
    "sequelize",
    "socket.io",
    "intern"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.12.0",
    "sequelize": "^6.37.5",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "esbuild": "^0.24.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "sass": "^1.83.4"
  }
}
